<div id="cart"
     i18n:domain="bda.plone.cart">
    
  <span tal:condition="view/disable_max_article_count"
        style="display:none;"
        class="disable_max_article_count">&nbsp;</span>

  <span id="cart_item_template" style="display: none;">
    <div class="cart_item summary_item">
      <h3>
        <a href="#" class="cart_item_location">
          <span class="cart_item_title">Title</span>
        </a>
      </h3>
      <span class="shop-cartlisting-count"
            i18n:translate="amount">Amount</span> 
      <span>
        <span class="cart_item_uid" style="display: none;">uid</span>
        <input type="text" size="2" class="cart_item_count" />
        <a href=""
           class="update_cart_item update_cart_action"
           title="Update cart"
           i18n:attributes="title update_cart">&nbsp;</a>
      </span>
      <span>
        <span class="cart_item_uid" style="display: none;">uid</span>
        <span class="cart_item_count" style="display: none;">0</span>
        <a href=""
           class="update_cart_item remove_from_cart_action"
           title="remove from cart"
           i18n:attributes="title remove_from_cart">&nbsp;</a>
      </span>
      <span i18n:translate="price">Price</span>
      <span class="cart_item_price">Price</span>
    </div>
  </span>
  
  <div id="cart_items" style="display: none;">
    <div id="cart_no_items" style="display: none;">
      <p i18n:translate="empty_cart">Cart is empty</p>
    </div>
  </div>
  
  <div id="cart_summary" style="display: none;">
    <div class="cart-sum-content">
      <tal:details condition="not:view/summary_total_only">
        <span i18n:translate="summary_net">Net:</span>
        <span class="cart_net">Net</span><br />
        <span i18n:translate="summary_vat">VAT.:</span>
        <span class="cart_vat">VAT</span><br />
      </tal:details>
      <strong i18n:translate="summary_total">Total:</strong>
      <strong class="cart_total">Total</strong>
    </div>
  </div>
  
  <div id="cart-button-wrapper">
    <div class="cart-order-button" id="cart-order-button-overview">
      <a href="javascript:history.back()"
         i18n:translate="back">back</a>
    </div>
    <div  class="cart-order-button">
      <a href="@@checkout"
         tal:attributes="href view/checkout_url"
         i18n:translate="checkout">checkout</a>
    </div>
  </div> 

</div>